<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_layout_view"
    android:layout_width="178dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/grid_image_item"
        android:layout_width="match_parent"
        android:layout_height="280dp"
    >
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/innerOpacity"
        android:layout_alignParentBottom="true">
        <TextView style="@style/textDetail" android:id="@+id/grid_text_item"/>
        <TextView style="@style/textDetail" android:id="@+id/grid_date_item"/>
    </LinearLayout>
</RelativeLayout>